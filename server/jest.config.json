{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "services/**/*.js",
    "routes/**/*.js",
    "!**/*.test.js",
    "!**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testTimeout": 10000,
  "verbose": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "coverageReporters": ["text", "text-summary", "html", "lcov"],
  "coverageDirectory": "coverage"
}
